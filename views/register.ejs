<%- include ("partials/head") %> 
    <body>
        <%- include("partials/header.ejs") %>
        <main class ="register">
            <section class="titulos">
                <h1>Creá tu cuenta ¡Gratis!</h1>
                <h3>¡Accedé a nuestros beneficios exclusivos!</h3>
            </section>
        
            <section class="forms">
                <form action="/" method="post">
                    <div class="google">
                        <button type="submit"><i class="fab fa-google"></i> Registrate con Google</button>
                    </div>
                    <div class="facebook">
                        <button type="submit"><i class="fab fa-facebook"></i> Registrate con Facebook</button>
                    </div>
                    <div class="nombreApellido">
                        <label for="nya">Nombre<b>(*)</b><input type="text" name="nombreApellido" id="nya" minlength="3" required></label>
                    </div>
        
                    <div class="email">
                        <label for="em">Email <b>(*)</b><input type="text" name="nombreUsuario" id="em" placeholder="ejemplo@gmail.com" required></label>
                    </div>
        
                    <div class="fechaNacimiento"><label for="fn">Fecha de nacimiento<input type="date"></label></div>

                    <div class="password"><label for="pass">Contraseña<b>(*)</b><input type="password" id="pass" minlength="6" maxlength="12" placeholder="min. 6 caracteres" required></label></div>
        
                    <div class="confirmacionPassword"><label for="passCon">Confirmar Contraseña<b>(*)</b><input type="password" id="passCon" minlength="6" maxlength="12" required></label></div>
        
                    <div class="submit"><label for="submit"><button type="submit" id="submit">Crear Cuenta</button></label></div>
                </form>
                <div class="carrousel">
                    <!-- <i class="fas fa-arrow-left"></i> -->
                    <img src="/images/banner-l-r.jpg" alt="banner">
                    <!-- <i class="fas fa-arrow-right"></i> -->
                </div>
        
            </section>
            <section class="a-login">
                ¿Ya tenés una cuenta? <a href="/ingresar">Iniciá sesión</a>
            </section>

        </main>

        <footer>
            <div class="futer">
                <section class="products-footer">
                    <h5>Productos</h5>
                    <div class="product-list">
                        <p>Remeras</p>
                        <p>Pantalones</p>
                        <p>Abrigos</p>
                        <p>Accesorios</p>
                    </div>
                </section>
                <section class="social-medias">
                    <h5>Seguinos</h5>
                    <div class="social-links">
                        <div><a href="#"><i class="fab fa-facebook"></i></a></div>
                        <div><a href="#"><i class="fab fa-instagram"></i></a></div>
                        <div><a href="#"><i class="fab fa-whatsapp"></i></a></div>
                    </div>
                </section>
                <section class="contact-footer">
                    <h5>Contactanos</h5>
                    <div class="contact-links">
                        <div><i class="far fa-envelope"></i><a href="#"> xperson@indefined.com</a></div>
                        <div><i class="fab fa-whatsapp"></i><a href="#"> +54 (011) 2222-4444</a></div>
                        <div><i class="fas fa-map-marker-alt"></i><a href="#"> CABA - Argentina</a></div>
                    
                    
                    
                </div>
                </section>
            </div>
            <section class="copy-right">
                <p>© Copyright Indefined - 2021</p>
            </section>
    
        </footer>
    </body>
    </html>